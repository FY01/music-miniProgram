/* pages/index/index.wxss */

/****************************************** carousel style */
.bannersSwiper {
  width: 100%;
  height: 300rpx;
}
.bannersSwiper image {
  width: 100%;
  height: 100%;
}

/*********************************************************** navigator style */
.navContainer {
  display: flex;
}
.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont {
  height: 100rpx;
  width: 100rpx;
  line-height: 100rpx;
  background-color: rgb(240,19,19);
  border-radius: 50%;
  text-align: center;
  color: white;
  font-size: 50rpx;
  margin: 20rpx 0;
}
.navItem text {
  font-size: 26rpx;
}

/**************************************************************recommend style*/

.recommendContainer {
  padding: 20rpx;
}

   /* recommend  content scroll-view*/
.recommendContainer .recommendScroll {
  display: flex;
  height: 250rpx;
}
.recommendContainer .scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.recommendContainer .scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rps;
}
.recommendContainer .scrollItem text {
  font-size: 26rpx;
  /*单行文本溢出*/
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  /*  多行文本溢出*/
  /*overflow: hidden;*/
  /*text-overflow: ellipsis;*/
  /*display: -webkit-box;*/
  /*-webkit-box-orient: vertical;*/
  /*-webkit-line-clamp:2;*/
}

/******************************************************************  topListContainer*/
.topListContainer {
  padding: 20rpx;
}
.topListSwiper {
  height: 450rpx;
}
.swiperItem {
  width: 96%;
  background-color: #fbfbfb;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem {
  display: flex;
  margin-bottom: 20rpx;
  border:2rpx solid #eee;
  border-radius: 6rpx;
}
.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}




















